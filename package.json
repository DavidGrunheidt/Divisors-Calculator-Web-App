{
  "name": "node-react",
  "version": "1.0.0",
  "scripts": {
    "client-dev": "cd client && nodemon --exec npm start",
    "server-dev": "cd server && nodemon server.js",
    "client-prod": "cd client && npm start",
    "server-prod": "cd server && node server.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server-dev\" \"npm run client-dev\"",
    "build": "npm install", 
    "start": "npm run server-prod"
  },
  "dependencies": {
    "@material-ui/core": "^1.5.1",
    "express": "^4.16.2",
    "mongodb": "^3.5.5",
    "react": "^16.13.0",
    "react-dom": "^16.13.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "nodemon": "2.0.2"
  }
}
